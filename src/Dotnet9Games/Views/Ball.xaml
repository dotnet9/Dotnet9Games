<UserControl
    x:Class="Dotnet9Games.Views.Ball"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Ellipse Name="EllipseBall" StrokeThickness="0">
            <Ellipse.Fill>
                <RadialGradientBrush RadiusX="0.75" RadiusY="0.75" GradientOrigin="0.7 0.35" Center="0.5 0.5">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="DarkOrange" Offset="0.75" x:Name="GradientStopDiff"/>
                    <GradientStop Color="White" Offset="1" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock
            x:Name="TextBlockBallNumber"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="ExtraBold"
            Foreground="Black" />
    </Grid>
</UserControl>